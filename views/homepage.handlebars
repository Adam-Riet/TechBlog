<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>{{post.name}}</h2>
    
    
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    <p>
      <a href="/posts/{{post.id}}">Comment</a>
  </div>
</div>
{{/each}}
